    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add scroll effect to hero
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const hero = document.querySelector('.hero');
            hero.style.transform = `translateY(${scrolled * 0.5}px)`;
        });

        // Animate elements on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe all feature cards
        document.querySelectorAll('.feature').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(el);
        });

        // Auto-detect shop domain from various sources
        function getShopDomain() {
            // 1. Check URL parameters (from Shopify App Store installation)
            const urlParams = new URLSearchParams(window.location.search);
            const shopFromUrl = urlParams.get('shop');
            if (shopFromUrl) {
                return shopFromUrl;
            }

            // 2. Check if we're in Shopify admin iframe
            if (window.parent !== window) {
                try {
                    const parentUrl = document.referrer;
                    if (parentUrl && parentUrl.includes('.myshopify.com')) {
                        const match = parentUrl.match(/https?:\/\/([^\/]+\.myshopify\.com)/);
                        if (match) {
                            return match[1];
                        }
                    }
                } catch (e) {
                    console.log('Cannot access parent URL due to CORS');
                }
            }

            // 3. Check localStorage for previously used shop
            const savedShop = localStorage.getItem('shopify_shop_domain');
            if (savedShop) {
                return savedShop;
            }

            return null;
        }

        // Install on Shopify function with auto-detection
        function installOnShopify() {
            // First try to auto-detect the shop domain
            let shop = getShopDomain();
            
            // If auto-detection fails, get from input
            if (!shop) {
                const shopInput = document.getElementById('shopDomain');
                shop = shopInput.value.trim();
                
                if (!shop) {
                    alert('Please enter your Shopify store domain');
                    shopInput.focus();
                    return;
                }
            }
            
            // Clean up the shop domain
            shop = shop.replace(/^https?:\/\//, ''); // Remove protocol
            shop = shop.replace(/\/$/, ''); // Remove trailing slash
            
            // Add .myshopify.com if not present
            if (!shop.includes('.myshopify.com')) {
                if (shop.includes('.')) {
                    // If it has a dot but not .myshopify.com, it might be a custom domain
                    alert('Please use your .myshopify.com domain (e.g., your-store.myshopify.com)');
                    return;
                } else {
                    // Just the store name, add .myshopify.com
                    shop = shop + '.myshopify.com';
                }
            }
            
            // Validate the format
            if (!/^[a-zA-Z0-9\-]+\.myshopify\.com$/.test(shop)) {
                alert('Please enter a valid Shopify store domain (e.g., your-store.myshopify.com)');
                return;
            }

            // Save to localStorage for future use
            localStorage.setItem('shopify_shop_domain', shop);
            
            // Redirect to Shopify OAuth
            window.location.href = `/auth/shopify?shop=${encodeURIComponent(shop)}`;
        }

        // Allow Enter key to trigger install
        document.getElementById('shopDomain').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                installOnShopify();
            }
        });

        // Install function for CTA section with auto-detection
        function installOnShopifyFromCta() {
            // First try to auto-detect the shop domain
            let shop = getShopDomain();
            
            // If auto-detection fails, get from input
            if (!shop) {
                const shopInput = document.getElementById('shopDomainCta');
                shop = shopInput.value.trim();
                
                if (!shop) {
                    alert('Please enter your Shopify store domain');
                    shopInput.focus();
                    return;
                }
            }
            
            // Clean up the shop domain
            shop = shop.replace(/^https?:\/\//, ''); // Remove protocol
            shop = shop.replace(/\/$/, ''); // Remove trailing slash
            
            // Add .myshopify.com if not present
            if (!shop.includes('.myshopify.com')) {
                if (shop.includes('.')) {
                    // If it has a dot but not .myshopify.com, it might be a custom domain
                    alert('Please use your .myshopify.com domain (e.g., your-store.myshopify.com)');
                    return;
                } else {
                    // Just the store name, add .myshopify.com
                    shop = shop + '.myshopify.com';
                }
            }
            
            // Validate the format
            if (!/^[a-zA-Z0-9\-]+\.myshopify\.com$/.test(shop)) {
                alert('Please enter a valid Shopify store domain (e.g., your-store.myshopify.com)');
                return;
            }

            // Save to localStorage for future use
            localStorage.setItem('shopify_shop_domain', shop);
            
            // Redirect to Shopify OAuth
            window.location.href = `/auth/shopify?shop=${encodeURIComponent(shop)}`;
        }

        // Allow Enter key for CTA input
        document.getElementById('shopDomainCta').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                installOnShopifyFromCta();
            }
        });

        // Auto-populate shop domain on page load
        document.addEventListener('DOMContentLoaded', function() {
            const detectedShop = getShopDomain();
            if (detectedShop) {
                // Auto-populate both input fields
                const shopInput = document.getElementById('shopDomain');
                const shopInputCta = document.getElementById('shopDomainCta');
                
                if (shopInput) {
                    shopInput.value = detectedShop;
                    shopInput.style.borderColor = '#10b981'; // Green border to indicate auto-detection
                }
                
                if (shopInputCta) {
                    shopInputCta.value = detectedShop;
                    shopInputCta.style.borderColor = '#10b981'; // Green border to indicate auto-detection
                }

                // Show success message
                const installHelp = document.querySelector('.install-help');
                if (installHelp) {
                    installHelp.innerHTML = `✅ Auto-detected: ${detectedShop} - Click install to continue`;
                    installHelp.style.color = '#10b981';
                }

                // If we have auto-detected shop and user came from Shopify App Store, auto-install
                const urlParams = new URLSearchParams(window.location.search);
                if (urlParams.get('shop') && urlParams.get('auto_install') === 'true') {
                    // Small delay to show the auto-detection, then proceed
                    setTimeout(() => {
                        installOnShopify();
                    }, 1500);
                }
            }
        });
    </script>
